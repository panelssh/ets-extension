{
  "compilerOptions": {
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": false,
    "removeComments": true,
    "target": "es2017"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
